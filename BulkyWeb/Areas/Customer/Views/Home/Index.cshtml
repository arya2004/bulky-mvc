
@model IEnumerable<Product>

    <div class="row pb-3">
        @foreach (var Product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                    <div class="row p-2">
                                <div class="col-12 p-1">
                                        <div class="card border-0 p-3 shadow border-top border-3 rounded">
                                                <img src="@Product.ImageUrl" alt="card-img-top rounded">
                                                <div class="card-body pb-0">
                                                        <div class="pl-1">
                                                            <p class="card-title">
                                                                @Product.Title
                                                            </p>
                                                            <p class="cardtitle">
                                                                @Product.Author
                                                            </p>
                                                        </div>
                                                                    <div class="pl-1">
                                                            <p>
                                                                As low as: <span>@Product.Price.ToString("c")</span>
                                                            </p>
                                                            <p>
                                                                    <span>@Product.Price100.ToString("c")</span>
                                                            
                                                            </p>
                                                        </div>
                                                </div>
                                                <div>
                                                    <a asp-action="Details" asp-route-id="@Product.Id" class="btn btn-primary">Details</a>
                                                </div>
                                        </div>
                                </div>
                    </div>
            </div>
        }
    </div>